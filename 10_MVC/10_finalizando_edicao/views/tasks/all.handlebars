<h1>Todas as Tarefas</h1>
<ul class="task-list">
    {{#each tasks}}
    <li>
        <a href="/" class="title">{{this.title}}</a>
        <div class="actions">
            <a href="/" class="bi bi-check2"></a>
            <a href="/tasks/edit/{{this.id}}" class="bi bi-pencil-square"></a>
            <form action="/tasks/remove" method="POST">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </div>
    </li>
    {{/each}}
</ul>